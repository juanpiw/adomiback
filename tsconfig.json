{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["shared/config/*"],
      "@utils/*": ["shared/utils/*"],
      "@middleware/*": ["shared/middleware/*"],
      "@types/*": ["shared/types/*"],
      "@constants/*": ["shared/constants/*"],
      "@database/*": ["shared/database/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/endpoints-old/**/*",
    
    "src/lib-old/**/*",
    "src/queries-old/**/*",
    "src/middleware-old/**/*",
    "src/*-old.ts",
    "src/test-basic.ts",
    "src/debug-memory.ts",
    "src/tests/**/*",
    "node_modules"
  ]
}

