# ========================================
# CONFIGURACIÓN HTTPS PARA ADOMI BACKEND
# ========================================

# --- Configuración de Base de Datos ---
DB_HOST=adomi-db-serve.mysql.database.azure.com
DB_PORT=3306
DB_USER=adomi_admin
DB_PASSWORD=tu_contraseña_aqui
DB_NAME=adomi

# --- Configuración HTTPS para Producción ---
# Descomenta estas líneas para habilitar HTTPS en producción
HTTPS_PORT=443
HTTP_PORT=80
KEY_PATH=/etc/letsencrypt/live/tu-dominio.com/privkey.pem
CERT_PATH=/etc/letsencrypt/live/tu-dominio.com/fullchain.pem

# --- Configuración de IP (opcional) ---
IP=0.0.0.0

# --- Configuración de Email ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password

# --- Configuración de Stripe ---
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_CURRENCY=clp

# --- URLs ---
FRONTEND_URL=https://tu-dominio.com
WEBHOOK_URL=https://tu-dominio.com/webhooks/stripe

# --- Configuración JWT ---
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2025
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-2025
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# --- Configuración de CORS ---
ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# --- Configuración de Rate Limiting ---
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=30

# --- Configuración de Logging ---
LOG_TO_CSV=true
CSV_PATH=./logs/adomi_api.csv

# --- Configuración de Google OAuth ---
GOOGLE_CLIENT_ID=tu-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu-google-client-secret
GOOGLE_REDIRECT_URI=https://tu-dominio.com/auth/google/callback

# --- Configuración de Google Sheets (opcional) ---
LOG_TO_SHEETS=false
GOOGLE_SHEETS_ID=tu_sheet_id
GOOGLE_SHEETS_TAB=conversations
GOOGLE_SERVICE_EMAIL=tu-email@gmail.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
